<form action="/edit-posts/<%= data._id %>?_method=PUT" method="POST">
    <label for="title"><b>Title</b></label>
    <input type = 'text' placeholder="Enter the Title" name="title" value="<%= data.title %>">

    <label for="body"><b>Content</b></label>
    <textarea  name="body" cols="50" rows="10"><%= data.body %></textarea>

    <input type="submit" value="Update" class="btn">
    
</form>